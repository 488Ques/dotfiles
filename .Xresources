! Force Unicode
XTerm.vt100.locale: false
XTerm.vt100.utf8: true

! Declare font
XTerm.vt100.font: xft:Hack:size=18

! Fix backspace key on Arch Linux
XTerm.vt100.backarrowKey: false
XTerm.ttyModes: erase ^?

! Keybinds
XTerm.vt100.translations: #override \n\
Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
Ctrl Shift <KeyPress>Prior: scroll-back(1,line) \n\
Ctrl Shift <KeyPress>Next: scroll-forw(1,line) \n\
Shift <Btn1Up>: exec-formatted("xdg-open '%t'", PRIMARY) select-start() select-end() \n\

!! Colorscheme

! special
*.foreground:   #c0b18b
*.background:   #1f1f1f
*.cursorColor:  #c0b18b

